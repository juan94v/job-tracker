<%= form_with(model: [@job_application, interview_stage]) do |form| %>
  <% if interview_stage.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(interview_stage.errors.count, "error") %> prohibited this interview_stage from being saved:</h2>

      <ul>
        <% interview_stage.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :order, style: "display: block" %>
    <%= form.number_field :order %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, InterviewStage.statuses.keys, {}, { class: "form-select" } %>
  </div>

  <div>
    <%= form.label :scheduled_date, style: "display: block" %>
    <%= form.datetime_field :scheduled_date %>
  </div>

  <div>
    <%= form.label :completed_date, style: "display: block" %>
    <%= form.datetime_field :completed_date %>
  </div>

  <div>
    <%= form.label :follow_up_date, style: "display: block" %>
    <%= form.date_field :follow_up_date %>
  </div>

  <div>
    <%= form.label :feedback, style: "display: block" %>
    <%= form.text_area :feedback %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
