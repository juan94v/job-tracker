<%= form_with(model: job_application, class: "job-application-form") do |form| %>
  <% if job_application.errors.any? %>
    <div class="alert">
      <h3 style="margin-bottom: 10px;"><%= pluralize(job_application.errors.count, "error") %> prohibited this job application from being saved:</h3>
      <ul style="margin-left: 20px;">
        <% job_application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <h2 style="margin-bottom: 20px; border-bottom: 2px solid #3498db; padding-bottom: 10px;">Basic Information</h2>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :company, "Company *" %>
        <%= form.text_field :company, placeholder: "e.g., Google, Meta, Startup Inc.", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :position, "Position *" %>
        <%= form.text_field :position, placeholder: "e.g., Senior Software Engineer", required: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :status, "Status" %>
        <%= form.select :status, JobApplication.statuses.keys.map { |s| [s.titleize, s] }, { prompt: "Select status" }, { class: "form-select" } %>
      </div>

      <div class="form-group">
        <%= form.label :location, "Location" %>
        <%= form.text_field :location, placeholder: "e.g., Remote, New York, NY" %>
      </div>
    </div>
  </div>

  <div class="card">
    <h2 style="margin-bottom: 20px; border-bottom: 2px solid #3498db; padding-bottom: 10px;">Compensation</h2>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :salary_range, "Salary Range" %>
        <%= form.text_field :salary_range, placeholder: "e.g., $80,000 - $100,000" %>
      </div>

      <div class="form-group">
        <%= form.label :current_salary, "Current Salary" %>
        <%= form.number_field :current_salary, step: 0.01, placeholder: "e.g., 75000" %>
      </div>
    </div>
  </div>

  <div class="card">
    <h2 style="margin-bottom: 20px; border-bottom: 2px solid #3498db; padding-bottom: 10px;">Application Details</h2>

    <div class="form-group">
      <%= form.label :skill_focus, "Skill Focus" %>
      <%= form.text_area :skill_focus, rows: 3, placeholder: "e.g., React, Node.js, AWS, Microservices..." %>
    </div>

    <div class="form-group">
      <%= form.label :applied_through, "Applied Through" %>
      <%= form.text_field :applied_through, placeholder: "e.g., LinkedIn, Company website, Referral" %>
    </div>

    <div class="form-group">
      <%= form.label :general_notes, "General Notes" %>
      <%= form.text_area :general_notes, rows: 4, placeholder: "Any additional information about this application..." %>
    </div>

    <div class="form-group">
      <%= form.label :final_outcome, "Final Outcome" %>
      <%= form.text_area :final_outcome, rows: 3, placeholder: "Final result of the application process (if completed)..." %>
    </div>
  </div>

  <div class="card">
    <h2 style="margin-bottom: 20px; border-bottom: 2px solid #3498db; padding-bottom: 10px;">Contact Information</h2>

    <div class="form-group">
      <%= form.label :contact_name, "Contact Name" %>
      <%= form.text_field :contact_name, placeholder: "e.g., Jane Smith" %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :contact_email, "Contact Email" %>
        <%= form.text_field :contact_email, type: "email", placeholder: "e.g., jane.smith@company.com" %>
      </div>

      <div class="form-group">
        <%= form.label :contact_role, "Contact Role" %>
        <%= form.text_field :contact_role, placeholder: "e.g., Hiring Manager, Recruiter" %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit job_application.new_record? ? "Create Job Application" : "Update Job Application", class: "btn btn-primary" %>
  </div>
<% end %>
