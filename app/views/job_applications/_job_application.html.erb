<div id="<%= dom_id job_application %>" class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
  <div class="card-body">
    <div class="flex justify-between items-start">
      <div>
        <h2 class="card-title text-lg"><%= job_application.position %></h2>
        <p class="text-base-content/70 font-medium"><%= job_application.company %></p>
      </div>
      <% if job_application.status.present? %>
        <%
          badge_class = case job_application.status.downcase
          when 'applied' then 'badge-info'
          when 'interviewing' then 'badge-warning'
          when 'offer' then 'badge-success'
          when 'rejected' then 'badge-error'
          else 'badge-neutral'
          end
        %>
        <div class="badge <%= badge_class %> badge-lg"><%= job_application.status.titleize %></div>
      <% end %>
    </div>

    <div class="divider my-2"></div>

    <div class="space-y-2 text-sm">
      <% if job_application.location.present? %>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span><%= job_application.location %></span>
        </div>
      <% end %>

      <% if job_application.salary_range.present? %>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= job_application.salary_range %></span>
        </div>
      <% end %>

      <% if job_application.skill_focus.present? %>
        <div class="flex items-start gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
          <span class="line-clamp-2"><%= job_application.skill_focus %></span>
        </div>
      <% end %>

      <% if job_application.applied_through.present? %>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          <span><%= job_application.applied_through %></span>
        </div>
      <% end %>

      <% if job_application.contact_name.present? %>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>
            <%= job_application.contact_name %>
            <% if job_application.contact_role.present? %>
              <span class="text-base-content/50">(<%= job_application.contact_role %>)</span>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>

    <% if job_application.general_notes.present? %>
      <div class="mt-3 p-3 bg-base-200 rounded-lg text-sm">
        <p class="line-clamp-3"><%= job_application.general_notes %></p>
      </div>
    <% end %>

    <% unless local_assigns[:show_edit_button] == false %>
      <div class="card-actions justify-end mt-4">
        <%= link_to job_application, class: "btn btn-primary btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          View
        <% end %>
        <%= link_to edit_job_application_path(job_application, return_to: 'index'), class: "btn btn-ghost btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>
      </div>
    <% end %>
  </div>
</div>
