<% content_for :title, "New job application" %>

<!-- Breadcrumbs -->
<div class="text-sm breadcrumbs mb-6">
  <ul>
    <li><%= link_to "Applications", job_applications_path %></li>
    <li>New Application</li>
  </ul>
</div>

<div class="flex items-center gap-3 mb-6">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
  </svg>
  <h1 class="text-3xl font-bold">New Job Application</h1>
</div>

<%= render "form", job_application: @job_application %>

<div class="mt-6">
  <%= link_to job_applications_path, class: "btn btn-ghost" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Applications
  <% end %>
</div>
